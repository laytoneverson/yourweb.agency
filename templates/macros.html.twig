{% macro serviceBox(boxClass, faicon, boxTitle, boxContent, linkPath) %}
    <div class="{{ boxClass }} service-box">
        <div class="service-box-heading" >
            <em><i class="fa fa-{{ faicon }} green" ></i></em>
            <h3>{{ boxTitle }}</h3>
        </div>
        <p>{{ boxContent }} - <a href="{{ linkPath }}">View Page</a></p>
    </div>
{% endmacro serviceBox %}

{% macro pageMeta(pageTitle, description, keywords, ogType, ogImage ) %}
    <title>{% block title %} {{ pageTitle }} | CryptoCoin Service Directory {% endblock %}</title>
    <meta name="description" content="{% block metaDescription %}{{ description }}{% endblock %}">
    <meta name="keywords" content="{% block metaKeywords %}{{ keywords }}{% endblock %}">
    <meta property="og:title" content="{% block socialTitle %}{{ pageTitle }}{% endblock %}">
    <meta property="og:description" content="{% block socialDescription %}{{ description }}{% endblock %}">
    <meta property="og:url" content="{% block socialUrl %}{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}{% endblock %}">
    <meta property="og:image" content="{% block socialImageUrl %}{{ ogImage ?? 'http://cryptocurrency-db.oss-us-east-1.aliyuncs.com/LogoSquare.png' }}{% endblock %}">
    <meta property="og:type" content="website">
{% endmacro %}

{% macro googleTagManagerHead(gaCode) %}
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','{{ gaCode }}');</script>
    <!-- End Google Tag Manager -->
{% endmacro %}

{% macro googleTagManagerBody(gaCode) %}
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ gaCode }}"
                      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
{% endmacro %}

