{% macro writeStatusClass(statusEnum) %}
    {% spaceless %}
        {% if statusEnum == 1 %}
            success
        {% elseif statusEnum == 6 %}
            danger
        {% elseif statusEnum == 4 %}
            info
        {% else %}
            warning
        {% endif %}
    {% endspaceless %}
{% endmacro %}

